doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Tienda de Motos | #{title}
        link(rel="stylesheet" href="/css/style.css")
    body    
        header.header
            .container
                .header__logo
                    a(href="/")
                        img(src="/img/LOGO.jpg" alt="Logo Tienda de Motos")
                .header__nav
                    ul
                        li
                            a(href="/") Inicio
                        li.nav-item-dropdown
                            a(href="Motos") Motos
                            .dropdown-menu
                                .dropdown-content
                                    ul.dropdown-column
                                        h3 Categorías
                                        ul
                                            li
                                                a(href="/motos/automaticassemiautomaticas") Automáticas y semiautomáticas
                                            li
                                                a(href="/motos/urbanastrabajo") Urbanas y de trabajo
                                            li
                                                a(href="/motos/todoterreno") Todo terreno
                                            li
                                                a(href="/motos/deportivas") Deportivas
                                            li
                                                a(href="/motos/superdeportivas") Súper deportivas
                                            li
                                                a(href="/motos/adventure") Adventure
                        li
                            a(href="/Tecnologias") Tecnologías
                        li
                            a(href="/blog") Blogs
                        li
                            a(href="/Contacto") Contacto

        main.main
            block content

        footer.footer
            .container
                .footer__info
                    h3 Tienda de Motos
                    p Tu distribuidor oficial de motocicletas
                    p Contacto: info@tiendamotos.com
                    p Teléfono: +34 123 456 789

                .footer__links
                    h3 Enlaces rápidos
                    ul
                        li
                            a(href="/") Inicio
                        li
                            a(href="/motos") Catálogo
                        li
                            a(href="/calculadora") Calculadora
                        li
                            a(href="/comparador") Comparador
                        li
                            a(href="/multimedia") Multimedia

                .footer__social
                    h3 Síguenos
                    .social-icons
                        a(href="#" target="_blank")
                            i.social-icon Facebook
                        a(href="#" target="_blank")
                            i.social-icon Instagram
                        a(href="#" target="_blank")
                            i.social-icon Twitter

                //- .footer__legal
                //-     a(href="/reglamento") Reglamento
                //-     a(href="/asesoria") Asesoría

            .footer__copyright
                p &copy; #{new Date().getFullYear()} Tienda de Motos. Todos los derechos reservados.

        script.
            document.querySelectorAll('.nav-item-dropdown > a').forEach(toggle => {
                toggle.addEventListener('click', e => {
                    e.preventDefault();
                    const menu = toggle.nextElementSibling;
                    menu.style.display = menu.style.display === 'flex' ? 'none' : 'flex';
                });
            });
        
        script(src="js/script.js")
        