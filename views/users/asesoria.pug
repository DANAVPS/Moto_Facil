extends ../layout/default

block content
    .asesoria-contenedor
        .container
            .seccion-encabezado
                h1 Asesoría Personalizada de Motocicletas
                p Encuentra la moto perfecta con nuestra ayuda especializada

            .formulario-asesoria
                form#formulario-asesoria
                    .seccion-perfil
                        h2 Cuéntanos sobre ti
                        .form-group
                            label(for="edad") Rango de Edad
                            select#edad(name="edad_recomendada" required)
                                option(value="") Selecciona tu rango de edad
                                option(value="16-25") 16-25 años
                                option(value="18-35") 18-35 años
                                option(value="25-40") 25-40 años
                                option(value="30-50") 30-50 años

                        .form-group
                            label(for="experiencia") Experiencia con Motocicletas
                            select#experiencia(name="nivel_experiencia" required)
                                option(value="") Selecciona tu nivel de experiencia
                                option(value="novato") Novato (Principiante)
                                option(value="intermedio") Intermedio
                                option(value="experto") Experto

                        .form-group
                            label(for="uso-previsto") Uso Principal de la Motocicleta
                            select#uso-previsto(name="uso_previsto" required)
                                option(value="") Selecciona el uso principal
                                option(value="ciudad") Uso urbano
                                option(value="trabajo") Trabajo y mensajería
                                option(value="recreativo") Paseos recreativos
                                option(value="largos-viajes") Viajes largos
                                option(value="todo-terreno") Todo terreno

                        .form-group
                            label(for="presupuesto") Rango de Presupuesto
                            select#presupuesto(name="presupuesto_rango" required)
                                option(value="") Selecciona tu presupuesto
                                option(value="0-3000000") Hasta $3,000,000
                                option(value="3000000-6000000") $3,000,000 - $6,000,000
                                option(value="6000000-10000000") $6,000,000 - $10,000,000
                                option(value="10000000-9999999999") Más de $10,000,000

                    .seccion-preferencias
                        h2 Preferencias Adicionales
                        .form-group
                            label Tipo de Transmisión
                            .opciones-transmision
                                .opcion
                                    input#transmision-manual(type="radio" name="transmission" value="manual")
                                    label(for="transmision-manual") Manual
                                .opcion
                                    input#transmision-automatica(type="radio" name="transmission" value="automatic")
                                    label(for="transmision-automatica") Automática
                                .opcion
                                    input#transmision-semiautomatica(type="radio" name="transmission" value="semi-automatic")
                                    label(for="transmision-semiautomatica") Semiautomática

                        .form-group
                            label Características Importantes
                            .opciones-caracteristicas
                                .opcion
                                    input#caracteristica-consumo(type="checkbox" name="caracteristicas" value="consumo")
                                    label(for="caracteristica-consumo") Bajo consumo
                                .opcion
                                    input#caracteristica-potencia(type="checkbox" name="caracteristicas" value="potencia")
                                    label(for="caracteristica-potencia") Alta potencia
                                .opcion
                                    input#caracteristica-confort(type="checkbox" name="caracteristicas" value="confort")
                                    label(for="caracteristica-confort") Confort
                                .opcion
                                    input#caracteristica-tecnologia(type="checkbox" name="caracteristicas" value="tecnologia")
                                    label(for="caracteristica-tecnologia") Tecnología

                    .seccion-contacto
                        h2 Información de Contacto
                        .form-group
                            label(for="nombre") Nombre Completo
                            input#nombre(type="text" name="nombre" required placeholder="Tu nombre completo")

                        .form-group
                            label(for="email") Correo Electrónico
                            input#email(type="email" name="email" required placeholder="tu.correo@ejemplo.com")

                        .form-group
                            label(for="telefono") Teléfono
                            input#telefono(type="tel" name="telefono" required placeholder="Número de contacto")

                        .form-group.politica-privacidad
                            input#politica(type="checkbox" name="politica" required)
                            label(for="politica") Acepto la política de privacidad y tratamiento de datos

                    .seccion-envio
                        button.btn.btn--primary(type="submit") Recibir Asesoría Personalizada

            .seccion-resultado
                h2 Resultados de tu Asesoría
                #resultado-asesoria.resultado-motos
                    if recomendaciones && recomendaciones.length
                        each moto in recomendaciones    
                            .tarjeta-moto
                                img(src=`/img/${moto.main_image}` alt=moto.model)
                                h3= moto.brand + ' ' + moto.model
                                p= moto.description
                                p Precio: $#{moto.price}
                    else
                        p No se encontraron motos que coincidan con tu perfil.