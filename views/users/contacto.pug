extends ../layout/default

block content
    section.contact-hero
        .container
            h1 Contáctanos
            p Estamos listos para resolver todas tus dudas y ayudarte a encontrar la moto perfecta

    section.contact-info
        .container
            .contact-info__grid
                .contact-method
                    i.icon-phone
                    h3 Teléfonos
                    p +57 123 456 789
                    p +57 987 654 321

                .contact-method
                    i.icon-email
                    h3 Correo Electrónico
                    p ventas@tiendamotos.com
                    p soporte@tiendamotos.com

                .contact-method
                    i.icon-location
                    h3 Dirección
                    p Calle Principal, 123
                    p Ciudad, Código Postal

    section.contact-form
        .container
            h2 Formulario de Contacto
            form.contact-form__container(action="/enviar-contacto" method="POST")
                .form-group
                    label(for="nombre") Nombre Completo
                    input#nombre(type="text" name="nombre" required placeholder="Tu nombre")

                .form-group
                    label(for="email") Correo Electrónico
                    input#email(type="email" name="email" required placeholder="tu.correo@ejemplo.com")

                .form-group
                    label(for="telefono") Teléfono
                    input#telefono(type="tel" name="telefono" placeholder="Opcional")

                .form-group
                    label(for="tipo-consulta") Tipo de Consulta
                    select#tipo-consulta(name="tipo-consulta" required)
                        option(value="") Selecciona una opción
                        option(value="ventas") Consulta de Ventas
                        option(value="servicio") Servicio Técnico
                        option(value="financiamiento") Financiamiento
                        option(value="otros") Otros

                .form-group
                    label(for="mensaje") Mensaje
                    textarea#mensaje(name="mensaje" rows="5" required placeholder="Escribe tu mensaje aquí...")

                .form-group.form-checkbox
                    input#politica-privacidad(type="checkbox" name="politica-privacidad" required)
                    label(for="politica-privacidad") Acepto la política de privacidad

                button.btn.btn--primary(type="submit") Enviar Mensaje

    section.contact-map
        .container
        h2 Nuestra Ubicación
        iframe(
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3582.827457011568!2d-73.12003892551613!3d7.108235816093265!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e683f56ec6e978f%3A0x22d5fa972ece37fe!2sLa%20isla!5e1!3m2!1ses-419!2sco!4v1748969420980!5m2!1ses-419!2sco"
            width="100%"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
        )
        section.pre-footer-cta
            .container
                .cta-content
                    h2 ¿Aún Tienes Preguntas?
                    p Nuestro equipo está listo para ayudarte
                    .cta-buttons
                        a.btn.btn--primary(href="/Asesoria") Asesoría Personalizada
                        a.btn.btn--secondary(href="tel:+57123456789") Llamar Ahora