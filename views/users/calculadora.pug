extends ../layout/default

block content
    .container
        .calculadora-header
            h1 Calculadora de Costos de Motocicletas
            p Calcula el costo total de adquirir y mantener tu motocicleta

        if error
            .error-message= error

        .calculadora-form
            form#calculadoraForm
                .form-group
                    label(for="moto_select") Selecciona tu Motocicleta:
                    select#moto_select(name="moto_id" required)
                        option(value="") -- Selecciona una moto --
                        each moto in motos
                            option(value=moto.id data-precio=moto.price data-cilindraje=moto.engine_cc)
                                = `${moto.brand} ${moto.model} - ${moto.engine_cc}cc - $${Number(moto.price).toLocaleString()}`

                .form-row
                    .form-group
                        label(for="km_anuales") Kilómetros anuales estimados:
                        input#km_anuales(type="number" name="km_anuales" value="12000" min="1000" max="50000" required)
                        small Promedio: 12,000 km/año

                    .form-group
                        label(for="anos_proyeccion") Años de proyección:
                        input#anos_proyeccion(type="number" name="anos_proyeccion" value="5" min="1" max="10" required)
                        small ¿Por cuántos años planeas usar la moto?

                .form-actions
                    button(type="submit") Calcular Costos
                    button(type="button" id="limpiarForm") Limpiar

        .moto-preview#motoPreview(style="display: none;")
            h3 Moto Seleccionada
            .moto-info
                .moto-detail
                    strong Marca: 
                    span#motoMarca
                .moto-detail
                    strong Modelo: 
                    span#motoModelo
                .moto-detail
                    strong Cilindraje: 
                    span#motoCilindraje cc
                .moto-detail
                    strong Precio: 
                    span#motoPrecio

        .loading#loading(style="display: none;")
            p Calculando costos...

        .resultados#resultados(style="display: none;")
            h2 Resultado del Cálculo

            .resumen-costos
                .costo-item
                    .costo-label Precio de la Moto:
                    .costo-valor#precioMoto

                .costo-item
                    .costo-label Impuestos Iniciales:
                    .costo-valor#totalImpuestos

                .costo-item.destacado
                    .costo-label Costo Inicial Total:
                    .costo-valor#costoInicial

                .costo-item
                    .costo-label Costo Anual (Mantenimiento + Papeleo):
                    .costo-valor#costoAnual

                .costo-item.total
                    .costo-label Costo Total Proyectado:
                    .costo-valor#costoTotal

                .costo-item.info
                    .costo-label Costo por Kilómetro:
                    .costo-valor#costoPorKm

            .detalles-acordeon
                .acordeon-item
                    .acordeon-header#headerImpuestos
                        h3 Detalles de Impuestos
                        span.acordeon-toggle +
                    .acordeon-content#contentImpuestos
                        .detalle-lista#detalleImpuestos

                .acordeon-item
                    .acordeon-header#headerMantenimiento
                        h3 Detalles de Mantenimiento Anual
                        span.acordeon-toggle +
                    .acordeon-content#contentMantenimiento
                        .detalle-lista#detalleMantenimiento

                .acordeon-item
                    .acordeon-header#headerPapeleo
                        h3 Detalles de Papeleo Anual
                        span.acordeon-toggle +
                    .acordeon-content#contentPapeleo
                        .detalle-lista#detallePapeleo

        .consejos
            h3 Consejos para Reducir Costos
            ul
                li Mantén tu moto en buen estado para evitar reparaciones costosas
                li Compara precios de repuestos y servicios
                li Conduce de manera responsable para reducir el desgaste
                li Considera el seguro voluntario para mayor protección
    style.
        /* Variables CSS para colores */
        :root {
            --primary-blue: #3b82f6; /* Tailwind's blue-500 */
            --secondary-blue: #2563eb; /* Tailwind's blue-600 */
            --light-blue: #dbeafe; /* Tailwind's blue-100 */
            --dark-gray: #1f2937; /* Tailwind's gray-900 */
            --medium-gray: #4b5563; /* Tailwind's gray-700 */
            --light-gray: #e5e7eb; /* Tailwind's gray-200 */
            --lighter-gray: #f9fafb; /* Tailwind's gray-50 */
            --red-error: #ef4444; /* Tailwind's red-500 */
            --red-bg: #fee2e2; /* Tailwind's red-100 */
            --red-text: #b91c1c; /* Tailwind's red-700 */
            --green-total: #10b981; /* Tailwind's green-500 */
            --green-bg: #d1fae5; /* Tailwind's green-100 */
            --green-text: #065f46; /* Tailwind's green-900 */
            --yellow-info: #f59e0b; /* Tailwind's yellow-500 */
            --yellow-bg: #fffbeb; /* Tailwind's yellow-50 */
            --yellow-text: #b45309; /* Tailwind's yellow-800 */
        }

        /* Base y reseteo suave */
        body {
            font-family: 'Inter', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f3f4f6;
            color: var(--medium-gray);
            line-height: 1.6;
        }

        .container {
            max-width: 960px;
            margin: 32px auto;
            padding: 16px;
        }

        /* --- Encabezado de la Calculadora --- */
        .calculadora-header {
            text-align: center;
            margin-bottom: 48px;
        }

        .calculadora-header h1 {
            font-size: 36px;
            font-weight: 800;
            color: var(--dark-gray);
            margin-bottom: 8px;
        }

        .calculadora-header p {
            font-size: 18px;
            color: var(--medium-gray);
            margin-bottom: 24px;
        }

        /* --- Mensaje de Error --- */
        .error-message {
            background-color: var(--red-bg);
            border: 1px solid var(--red-error);
            color: var(--red-text);
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 24px;
            position: relative;
            font-weight: 500;
        }

        /* --- Formulario de la Calculadora --- */
        .calculadora-form,
        .moto-preview,
        .resultados,
        .consejos {
            background-color: #fff;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            border-radius: 12px;
            padding: 40px;
            margin-bottom: 32px;
        }

        .form-group {
            margin-bottom: 24px;
        }

        .form-group label {
            display: block;
            color: var(--medium-gray);
            font-size: 14px;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .form-group input[type="number"],
        .form-group select {
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
            appearance: none;
            border: 1px solid var(--light-gray);
            border-radius: 6px;
            width: 100%;
            padding: 12px 16px;
            color: var(--medium-gray);
            line-height: 1.25;
            transition: all 0.2s ease-in-out;
        }

        .form-group input[type="number"]:focus,
        .form-group select:focus {
            outline: none;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.5);
            border-color: var(--primary-blue);
        }

        .form-group small {
            color: #6b7280;
            font-size: 12px;
            font-style: italic;
            display: block;
            margin-top: 4px;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr;
            gap: 24px;
            margin-bottom: 24px;
        }

        @media (min-width: 768px) {
            .form-row {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        .form-actions {
            display: flex;
            justify-content: center;
            gap: 16px;
        }

        .form-actions button {
            font-weight: 700;
            padding: 12px 24px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            transition: background-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            outline: none;
        }

        .form-actions button[type="submit"] {
            background-color: var(--primary-blue);
            color: #fff;
        }

        .form-actions button[type="submit"]:hover {
            background-color: var(--secondary-blue);
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.5);
        }

        #limpiarForm {
            background-color: #9ca3af;
            color: #fff;
        }

        #limpiarForm:hover {
            background-color: #6b7280;
            box-shadow: 0 0 0 3px rgba(156, 163, 175, 0.5);
        }

        /* --- Previsualización de Moto --- */
        .moto-preview h3 {
            font-size: 24px;
            font-weight: 600;
            color: var(--dark-gray);
            margin-bottom: 16px;
        }

        .moto-info {
            display: grid;
            grid-template-columns: 1fr;
            gap: 16px;
        }

        @media (min-width: 768px) {
            .moto-info {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        .moto-detail strong {
            color: var(--medium-gray);
        }

        .moto-detail span {
            color: var(--dark-gray);
            margin-left: 8px;
        }

        /* --- Carga (Loading) --- */
        .loading {
            text-align: center;
            padding: 32px 0;
        }

        .loading p {
            font-size: 18px;
            color: var(--medium-gray);
            font-weight: 500;
        }

        .spinner {
            width: 48px;
            height: 48px;
            border: 4px solid var(--primary-blue);
            border-top: 4px solid transparent;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 16px auto 0;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* --- Resultados del Cálculo --- */
        .resultados h2 {
            font-size: 28px;
            font-weight: 700;
            color: var(--dark-gray);
            margin-bottom: 24px;
        }

        .resumen-costos {
            display: grid;
            grid-template-columns: 1fr;
            gap: 16px;
            margin-bottom: 32px;
        }

        .costo-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 16px;
            background-color: var(--lighter-gray);
            border-radius: 8px;
        }

        .costo-label {
            color: var(--medium-gray);
            font-weight: 500;
        }

        .costo-valor {
            color: var(--dark-gray);
            font-weight: 600;
            font-size: 18px;
        }

        .costo-item.destacado {
            background-color: var(--light-blue);
            border-left: 4px solid var(--primary-blue);
        }

        .costo-item.destacado .costo-label {
            color: var(--primary-blue);
            font-weight: 700;
            font-size: 20px;
        }

        .costo-item.destacado .costo-valor {
            color: var(--secondary-blue);
            font-weight: 800;
            font-size: 24px;
        }

        .costo-item.total {
            background-color: var(--green-bg);
            border-left: 4px solid var(--green-total);
        }

        .costo-item.total .costo-label {
            color: var(--green-text);
            font-weight: 700;
            font-size: 20px;
        }

        .costo-item.total .costo-valor {
            color: var(--green-text);
            font-weight: 800;
            font-size: 24px;
        }

        .costo-item.info {
            background-color: var(--yellow-bg);
            border-left: 4px solid var(--yellow-info);
        }

        .costo-item.info .costo-label {
            color: var(--yellow-text);
            font-weight: 500;
        }

        .costo-item.info .costo-valor {
            color: var(--yellow-text);
            font-weight: 600;
        }

        /* --- Detalles Acordeón --- */
        .detalles-acordeon {
            margin-bottom: 32px;
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

        .acordeon-item {
            background-color: var(--lighter-gray);
            border-radius: 8px;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }

        .acordeon-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 16px;
            background-color: var(--light-gray);
            cursor: pointer;
            transition: background-color 0.2s ease-in-out;
        }

        .acordeon-header:hover {
            background-color: #d1d5db;
        }

        .acordeon-header h3 {
            font-size: 18px;
            font-weight: 600;
            color: var(--dark-gray);
            margin: 0;
        }

        .acordeon-toggle {
            font-size: 20px;
            color: #6b7280;
            transition: transform 0.3s ease-in-out;
        }

        .acordeon-header.active .acordeon-toggle {
            transform: rotate(45deg);
        }

        .acordeon-content {
            padding: 16px;
            border-top: 1px solid var(--light-gray);
            display: none;
        }

        .detalle-lista {
            color: var(--medium-gray);
            list-style: none;
            padding: 0;
        }

        .detalle-lista div {
            margin-bottom: 8px;
        }
        .detalle-lista div:last-child {
            margin-bottom: 0;
        }


        /* --- Consejos --- */
        .consejos h3 {
            font-size: 24px;
            font-weight: 600;
            color: var(--dark-gray);
            margin-bottom: 16px;
        }

        .consejos ul {
            list-style: disc;
            list-style-position: inside;
            padding-left: 0;
            color: var(--medium-gray);
        }

        .consejos li {
            margin-bottom: 8px;
        }
